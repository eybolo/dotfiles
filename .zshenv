# XDG DIRECTORIES personal 
export XDG_CONFIG_HOME="$HOME/.config"
export XDG_CACHE_HOME="$HOME/.cache"
export XDG_DATA_HOME="$HOME/.local/share"
export XDG_PROJECT_DIR="$HOME/project"
export XDG_CODE_DIR="$HOME/code"
export XDG_BACKUP_DIR="$HOME/backup"
export XDG_APP_DIR="$HOME/app"
export XDG_TMP_DIR="$HOME/tmp"
export XDG_VM_DIR="$HOME/vm"

# XDG freedesktop
export XDG_DOWNLOAD_DIR="$HOME/download"
export XDG_PICTURES_DIR="$HOME/image"
export XDG_DOCUMENTS_DIR="$HOME/doc"
export XDG_VIDEOS_DIR="$HOME/video"
#export XDG_DESKTOP_DIR="$HOME/Desktop"
#export XDG_TEMPLATES_DIR="$HOME/Templates"
#export XDG_PUBLICSHARE_DIR="$HOME/Public"
#export XDG_MUSIC_DIR="$HOME/Music"

export EDITOR=vim

# Clipmenu
export CM_LAUNCHER=rofi
#export CM_HISTLENGTH=7
#export CM_DIR=~/.config/clipmenu

# Clipmenud
export CM_MAX_CLIPS=10

# bat
export BAT_CONFIG_PATH="$HOME/.config/bat/bat.conf"

# cheat
export CHEAT_CONFIG_PATH="$HOME/.config/cheat/conf.yml"
export CHEAT_USE_FZF=true
